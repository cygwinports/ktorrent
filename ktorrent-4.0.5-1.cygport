inherit kde4

DESCRIPTION="KDE BitTorrent client"
HOMEPAGE="http://ktorrent.org/"
SRC_URI="http://ktorrent.org/downloads/${PV}/${P}.tar.bz2"

PKG_NAMES="${PN} plasma-engine-ktorrent"
ktorrent_CONTENTS="--exclude=plasma* --exclude=cmake
                   etc/ usr/bin/ usr/lib/kde4/*.dll usr/share/"
plasma_engine_ktorrent_CONTENTS="usr/lib/kde4/plasma* usr/share/kde4/services/plasma*"
PKG_IGNORE="usr/lib/libkt*"
